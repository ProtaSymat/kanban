{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="bg-white"><div class="container py-4">
    <h1>Inscription</h1>
<div class="form-container">
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_row(registrationForm.identity, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Mot de passe',
                'attr': {'class': 'form-control'}
            }) }}
        </div>
        <div class="form-check">
            {{ form_row(registrationForm.agreeTerms, {
                'label': 'J\'accepte les termes et conditions',
                'attr': {'class': 'form-check-input'}
            }) }}
            {{ form_label(registrationForm.agreeTerms, null, { 'label_attr': {'class': 'form-check-label'} }) }}
        </div>

        <button type="submit" class="btn btn-primary">S'Inscrire</button>
    {{ form_end(registrationForm) }}

    </div></div></section>
{% endblock %}
